<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.gdmec.s07150836.dialog2.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/charactor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字符选择对话框"
        android:id="@+id/button"
        android:onClick="chardialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/uidate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期选择对话框"
        android:id="@+id/button2"
        android:onClick="datedialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/uitime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择对话框"
        android:id="@+id/button3"
        android:onClick="timedialog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度对话框"
        android:id="@+id/button4"
        android:onClick="progdialog" />
</LinearLayout>
